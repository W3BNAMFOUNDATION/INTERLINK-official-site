<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">

  <!-- Background (optional transparent) -->
  <rect width="100%" height="100%" fill="none"/>

  <!-- Outer 3D Hexagon -->
  <defs>
    <linearGradient id="hexOuter" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#3db3ff"/>
      <stop offset="50%" stop-color="#1f6fda"/>
      <stop offset="100%" stop-color="#0a3c80"/>
    </linearGradient>

    <linearGradient id="hexInner" x1="0" y1="1" x2="1" y2="0">
      <stop offset="0%" stop-color="#0e1a2b"/>
      <stop offset="100%" stop-color="#1c2f47"/>
    </linearGradient>

    <linearGradient id="symbolFill" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#bfe5ff"/>
      <stop offset="100%" stop-color="#4da6ff"/>
    </linearGradient>
  </defs>

  <!-- Outer hexagon shape -->
  <path d="M256 40 
           L420 140 
           L420 320 
           L256 420 
           L92 320 
           L92 140 Z"
        fill="url(#hexOuter)"
        stroke="#0a335f"
        stroke-width="10"
        stroke-linejoin="round"/>

  <!-- Inner recessed hexagon -->
  <path d="M256 90 
           L380 165 
           L380 295 
           L256 370 
           L132 295 
           L132 165 Z"
        fill="url(#hexInner)"
        stroke="#0d2440"
        stroke-width="6"
        stroke-linejoin="round"/>

  <!-- IL symbol (stylized vertical bars) -->
  <path d="M230 180 L260 180 L260 330 L230 330 Z"
        fill="url(#symbolFill)"/>

  <path d="M285 210 L315 210 L315 330 L285 330 Z"
        fill="url(#symbolFill)"/>

  <!-- Light shine on top -->
  <ellipse cx="256" cy="120" rx="110" ry="35" fill="rgba(255,255,255,0.12)"/>

</svg>
